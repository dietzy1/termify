# Termify Configuration Example
# Copy this file to ~/.config/termify/config.yaml (macOS/Linux) or %APPDATA%\termify\config.yaml (Windows)

# Server configuration
server:
  # Port for the authentication callback server
  # Default: 8080
  port: 8080

# Spotify configuration
spotify:
  # Your Spotify Client ID from the Spotify Developer Dashboard
  # https://developer.spotify.com/dashboard/applications
  client_id: ""
  
  # Whether to run in daemon mode (without requiring Spotify to be open)
  # Default: false
  daemon_mode: false
  
  # Which Spotify connect client to use
  # Options: default, librespot
  # Default: default
  connect_client: default 