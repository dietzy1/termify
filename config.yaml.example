# Termify Configuration Example
# Copy this file to ~/.termify/config.yaml (macOS/Linux) or %USERPROFILE%\termify\config.yaml (Windows)

# Server configuration
server:
  # Port for the server to listen on
  # Default: 8080
  port: 8080

# Spotify configuration
spotify:
  # Your Spotify Client ID from the Spotify Developer Dashboard
  # https://developer.spotify.com/dashboard/applications
  client_id: ""
  
  # Which Spotify connect client to use
  # Options: default, librespot
  # Default: default
  connect_client: default

# Logging configuration
logging:
  # Enable or disable debug logging to file
  # Default: false
  enabled: false